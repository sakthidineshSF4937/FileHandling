          formElement.MaxWidth = bound.Width;
          break;
        case BoldSign.ApiManagement.Models.FieldType.Company:
          formElement.ElementType = "Company";
          if (tag.Font != null)
          {
            formElement.FontFamily = (tag.Font.ToString());
